<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="admybrand.rohanthakur7055.com.videoeditor.MainActivity">

    <Button
        android:text="Add Effects To the Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_effects"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:visibility="invisible"/>




    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="143dp" />

    <TextView
        android:text="video greater than 60sec. we are processingfirst 60 sec of video. please wait..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/message"

        />

    <Button
        android:text="Compress Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/compress"
        android:visibility="invisible"/>

    <Button
        android:text="Capture Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message"
        android:layout_centerHorizontal="true"
        android:id="@+id/capture" />

</RelativeLayout>
